@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="wrapper wrapper-grey">
    <!-- start: GENERIC CONTENT CONTAINER -->
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <img src="~/Content/Images/front-logo.png" class="img-responsive animate-if-visible" data-animation-options='{"animation":"tada", "duration":"600"}'/>
            </div>
            <div class="col-sm-6">
                <h2 style="color:#199C98">E-Enterprise Community Inventory Platform</h2>
                <hr class="fade-right">
                <p>
                    The E-Enterprise Community Inventory Platform provides an online inventory of agency profiles for the state, tribal, and territorial partners of E-Enterprise.                     
                </p>
                <p>
                    This site contains a broad scope of information, including partner agencies’ information technology infrastructure, data exchange nodes and flows, process improvement efforts, and other program modernizations (e.g. advanced monitoring). 
                </p>
                <p>
                    This allows the E-Enterprise community of co-regulators to have a more complete understanding of their partner agencies’ plans, priorities, and constraints, and to plan and collaborate more strategically across agencies.
                </p>
                <hr class="fade-right">
                <a class="btn btn-success" href="@Url.Action("Login","Account")" style="margin-right:30px;"><i class="clip-arrow-right"></i> Log In</a>
                <a class="btn btn-primary" href="@Url.Action("Register","Account")"><i class="clip-arrow-right"></i> Register</a>
            </div>
        </div>
    </div>
    <!-- end: GENERIC CONTENT CONTAINER -->
</section>
<section>
    <!-- start: CORE BOXES CONTAINER -->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="core-box">
                    <div class="heading">
                        <i class="clip-search circle-icon"></i>
                        <h2 style="color:#199C98">Advanced Search</h2>
                    </div>
                    <div class="content">
                        EECIP includes advanced search techniques such as synonym matching (e.g. 303D = ATTAINS), full document text searching, and search suggestions.
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="core-box">
                    <div class="heading">
                        <i class="clip-question-2 circle-icon"></i>
                        <h2 style="color:#199C98">Ask & Answer Questions</h2>
                    </div>
                    <div class="content">
                        Ask questions in the community forum and gain access to assistance from other in the community.
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="core-box">
                    <div class="heading">
                        <i class="clip-heart-2 circle-icon"></i>
                        <h2 style="color:#199C98">Help & Be Recognized</h2>
                    </div>
                    <div class="content">
                        Gain recognition by helping fellow community members by earning badges for a variety of activities.
                    </div>
                    @*<a class="view-more" href="#">
                        View More <i class="fa fa-angle-right"></i>
                    </a>*@
                </div>
            </div>
        </div>
    </div>
    <!-- end: CORE BOXES CONTAINER -->
</section>