@section Scripts {
    @*<script src="https://app.getchaperone.com/embed/chaperone.js"></script>
        @Scripts.Render("~/bundles/chaperone")*@
    @Scripts.Render("~/bundles/autocomplete")
    @Scripts.Render("~/bundles/pagination")
    @Scripts.Render("~/bundles/stickytableheaders")
    @Scripts.Render("~/bundles/trunk8")

    <script type="text/javascript">

        //truncate long text
        $('.resDesc').trunk8({
            lines: 4,
            fill: '&hellip; <a id="read-more" href="#">read more</a>'
        });

        $(document).on('click', '#read-more', function (event) {
            $(this).parent().trunk8('revert').append(' <a id="read-less" href="#">read less</a>');
            return false;
        });

        $(document).on('click', '#read-less', function (event) {
            $(this).parent().trunk8();
            return false;
        });




        $(document).ready(function () {
            //focus on search bar
            $('#txtSearch').focus();

            //autocomplete
            new autoComplete({
                selector: 'input[name="q"]',
                source: function (term, response) {
                    $.getJSON('/Admin/SearchAdminSuggest/', { term: term }, function (data) { response(data); });
                },
                onSelect: function (e, term, item) {
                    $("#txtSearch").val('"' + term + '"');
               }
            });


            //move state facet
            $("#facetItemContainer2").insertAfter("#State");
            $("#facetHeaderState").insertAfter("#State");

            //pagination
            $(function () {
                var _totalRec = @(Model.searchResults != null ? Model.searchResults.Count : 1);
                var _totalPages = Math.floor(_totalRec / 50) + 1;
                var obj = $('#pagination').twbsPagination({
                    totalPages: _totalPages,
                    initiateStartPageClick: false,
                    visiblePages: 10,
                    startPage: @Model.currentPage,
                    onPageClick: function (event, page) {
                        $('#currentPage').val(page);
                        $('#norepostform').submit();
                        return false;
                    }
                });
            });


            //sticky header on table
            $('.table').stickyTableHeaders({ fixedOffset: $('.navbar-inverse') });


            //tab handling
            var EntUrl = '@Url.Action("EnterpriseSvcOverview", "Dashboard")';
            $('#entHelp').on("click", function () {
                window.location = EntUrl;
            });

            //do proper tab display from postback
            $('.nav-tabs a[href="#tab' + $('#activeTab').val() + '"]').tab('show');

            $('a[href="#tab1"]').on('shown.bs.tab', function (e) {
                $('#facetDataType').val('');
                $('#facetState').val('');
                $('#activeTab').val('1');
                $('#currentPage').val(1);
                $('#sortType').val('');
                $('#norepostform').submit();
            });

