@model EECIP.Models.vmAccountLostPassword
@{
    ViewBag.Title = "Test Email";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="panel-body wrapper-lg">

    <!-- render the validation summary -->
    @Html.Partial("~/Views/Shared/_ValidationSummary.cshtml")

    <div class="form-group">
        This page tests whether EECIP sends emails successfully. If successful, an email will be sent to your accounts email address.
    </div>
    @using (Html.BeginForm("TestSendEmail2", "Admin", FormMethod.Post, new { @id="norepostform" }))
    {
        <button type="submit" class="btn btn-primary">Test</button>
        @Html.ActionLink("Cancel", "Settings", new object { }, new { @class = "pull-right m-t-xs" })
    }

</div>
