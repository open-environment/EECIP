@using EECIP.HtmlHelpers
@using EECIP.App_Logic.DataAccessLayer

<div class="main-navigation navbar-collapse collapse">
    <!-- start: MAIN MENU TOGGLER BUTTON -->
    <div class="navigation-toggler">
        <i class="clip-chevron-left"></i>
        <i class="clip-chevron-right"></i>
    </div>
    <!-- end: MAIN MENU TOGGLER BUTTON -->
    <!-- start: MAIN NAVIGATION MENU -->
    <ul class="main-navigation-menu">

        <li class="lvl1 @Html.ActivePage("Dashboard", "Index")">
            <a href="@Url.Action("Index","Dashboard")">
                <i class="clip-search-3"></i>
                <span class="title">Search </span><span class="selected"></span>
            </a>
        </li>
        <li>
            <a href="javascript:void(0)">
                <i class="clip-pencil-3"></i>
                <span class="title">Edit </span><i class="icon-arrow"></i>
                <span class="selected"></span>
            </a>
            <ul class="sub-menu">
                <li class="@Html.ActivePage("Account", "UserProfile")">
                    <a href="@Url.Action("UserProfile", "Account", new { id = db_Accounts.GetUserIDX() })">
                        <span class="title">My User Profile </span>
                    </a>
                </li>
                <li class="@Html.ActivePage("Dashboard", "Agency")">
                    <a href="@Url.Action("Agency", "Dashboard")">
                        <span class="title">My Agency Profile </span>
                    </a>
                </li>
                <li class="@Html.ActivePage("Dashboard", "Projects")">
                    <a href="@Url.Action("Projects", "Dashboard")">
                        <span class="title">Agency Projects </span>
                    </a>
                </li>
            </ul>
        </li>

        <li>
            <a href="@Url.Action("Index","MVCForum")">
                <i class="clip-question"></i>
                <span class="title">Forum </span><span class="selected"></span>
            </a>
        </li>

        @if (User.IsInRole("Admins"))
        {
            <li>
                <a href="javascript:;">
                    <i class="clip-cog-2"></i>
                    <span class="title">Administration</span>
                    <i class="icon-arrow"></i>
                </a>
                <ul class="sub-menu">
                    <li class="@Html.ActivePage("Admin", "Users")">
                        <a href="@Url.Action("Users","Admin")">
                            <span class="title">Users </span>
                        </a>
                    </li>
                    <li class="@Html.ActivePage("Admin", "Roles")">
                        <a href="@Url.Action("Roles","Admin")">
                            <span class="title">Roles </span>
                        </a>
                    </li>
                    <li class="@Html.ActivePage("Admin", "Ref")">
                        <a href="javascript:;">
                            <span class="title">Reference Data</span>
                            <i class="icon-arrow"></i>
                        </a>
                        <ul class="sub-menu">
                            <li class="lvl3 @Html.ActivePage("Admin", "RefAgencies")">
                                <a href="@Url.Action("RefAgencies","Admin")">
                                    <span class="title">Agencies List </span>
                                </a>
                            </li>
                            <li class="lvl3 @Html.ActivePage("Admin", "RefEntServices")">
                                <a href="@Url.Action("RefEntServices","Admin")">
                                    <span class="title">Enterprise Services </span>
                                </a>
                            </li>
                            <li class="lvl3 @Html.ActivePage("Admin", "RefTags")">
                                <a href="@Url.Action("RefTags","Admin")">
                                    <span class="title">Tags </span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="@Html.ActivePage("Admin", "ImportData")">
                        <a href="@Url.Action("ImportData","Admin")">
                            <span class="title">Import Data </span>
                        </a>
                    </li>
                    <li class="@Html.ActivePage("Admin", "Settings")">
                        <a href="@Url.Action("Settings","Admin")">
                            <span class="title">Global Settings </span>
                        </a>
                    </li>
                    <li class="lvl3 @Html.ActivePage("Admin", "SearchAdmin")">
                        <a href="@Url.Action("SearchAdmin", "Admin")">
                            <span class="title">Search Config </span>
                        </a>
                    </li>
                    <li class="@Html.ActivePage("Admin", "Analytics")">
                        <a href="@Url.Action("Analytics","Admin")">
                            <span class="title">Analytics </span>
                        </a>
                    </li>
                </ul>
            </li>
        }

    </ul>
    <!-- end: MAIN NAVIGATION MENU -->
</div>
