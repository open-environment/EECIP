@model EECIP.Models.vmForumPopularTags

@if (Model.popularTags.Any())
{
    <div class="side-box popular-tags-box">
        <h5>Popular Tags</h5>
        <ul class="tagCloud">
            @foreach (var tag in Model.popularTags)
            {
                <li>
                    <span class="tag">
                        <a href="@Url.Action("Index", "Forum", new { tag = tag.Key })">@Html.Raw(tag.Key) <span class="badge">@tag.Value</span></a>
                    </span>
                </li>
            }
        </ul>
    </div>
}
